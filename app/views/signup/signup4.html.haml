.body
  .signup-header
    .signup-header__box
      .signup-header-logo
        =link_to '' do
          =image_tag 'SVG/fmarket_logo_red.svg'
      %nav.signupBar
        %ol.signupList
          %li.signupInfo.marker.marker2
            .mark-name1
              会員情報
            .marking
              .mark
              .mark-line
          %li.signupTell.marker.marker2
            .mark-name2
              電話番号認証
            .marking
              .mark
              .mark-line
          %li.signupAdd.marker.now-point
            .mark-name3
              お届け先住所入力
            .marking
              .mark
              .mark-line
          %li.signupHowToPay
            .mark-name4
              支払い方法
            .marking
              .mark
              .mark-line
          %li.signupComplete
            .mark-name5
              完了
            .marking
              .mark
              .mark-line
  .addless-box
    .addless-box__title
      %h2 住所入力
    .addless-box__body
      .push-box
        =form_with model: @post, local: true do |f| 
          .formbox
            .form-group
              %label.kanjiName-new
                お名前(全角) 
              %span.must-content
                必須
              .input-parrent
                %input.kanji1stName-info{placeholder: "例) 山田", value: ""}
                %input.kanji2ndName-info{placeholder: "例) 彩", value: ""}
            .form-group
              %label.kanaName-new
                お名前(全角) 
              %span.must-content
                必須
              .input-parrent
                %input.kana1stName-info{placeholder: "例) ヤマダ", value: ""}
                %input.kana2ndName-info{placeholder: "例) アヤ", value: ""}
            .form-group
              %label.yubinNum-new
                郵便番号
              %span.must-content
                必須
              %input.yubinNum-info{placeholder: "例) 123-4567", value: ""}/
            .form-group
              %label.prefecture-new
                都道府県
              %span.must-content
                必須
              .select-prefectures
                //=render "option-prefectures"
            .form-group
              %label.municipality-new
                市町村
              %span.must-content
                必須
              %input.password-info{placeholder: "例) 横浜市緑区", value: ""}/
            .form-group
              %label.banchi-new
                番地
              %span.must-content
                必須
              %input.password-info{placeholder: "例) 青山市1-1-1", value: ""}/
            .form-group
              %label.billding-new
                建物名
              %span.nini-content
                任意
              %input.password-info{placeholder: "例) 柳ビル103", value: ""}/
            .form-group
              %label.tellNum-new
                電話
              %span.nini-content
                任意
              %input.tellNum-info{placeholder: "09012345678", value: ""}/
            =link_to signup5_signup_index_path do
              =f.button "次へ進む", class: "go-ahead4"
  =render "devise/shared/footer-login"