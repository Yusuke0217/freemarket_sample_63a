%header.top-content
  .top-main
    .top-main-face
      = link_to image_tag("SVG/fmarket_logo_red.svg", alt: "", class: "top-main-face__logo"), "/mypage/profile"
      %form.searchbox
        %input.texts{type: "search", name: "keyword", placeholder: "Do you look for anything?", value: ""}
        %button.glass
          %i.fas.fa-search

    .top-main-leg
      .top-main-leg__left
        %ul.item-nav
          %li
            %h2
              = link_to "https://www.mercari.com/jp/category/", class: "category" do
                %i.fas.fa-list
                %span カテゴリーから探す
          .open-category

          %li
            %h2
              = link_to "https://www.mercari.com/jp/brand/", class: "brand" do
                %i.fab.fa-cc-amex
                %span ブランドから探す
          .open-brand

      .top-main-leg__right
        %ul.user-nav
          %li
            = link_to "新規会員登録", new_user_registration_path, class: "new-acount"
          %li
            = link_to "ログイン",  new_user_session_path, class: "login-acount"