.main-contents__goods
  %ul
    - @products.each do |product|
      %li
        .main-contents-box
          =link_to my_product_detail_product_path(product.id), class: "contents-item" do
            .contents-item__image
              .contents-item__image--price
                ¥
                %span= product.price
              = image_tag product.image_url if product.image.present?
            .contents-item__index
              .contents-item__index--name 
                %span= product.name
.main-contents__header
  .main-contents__header--name
    メンズ新着アイテム
  =link_to "もっと見る ＞", class: "main-contents__header--more"