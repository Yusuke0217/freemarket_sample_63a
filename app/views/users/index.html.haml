= render 'layouts/header'
.main
  .slide
  .top-nav
    .Category
      人気のカテゴリー
    %ul.Categorys
      %li
        =link_to "レディース", class: "Categorys__list--item"
      %li
        =link_to "メンズ", class: "Categorys__list--item"
      %li
        =link_to "家電・スマホ・カメラ", class: "Categorys__list--item"
      %li
        =link_to "おもちゃ・ホビー・グッズ", class: "Categorys__list--item"
  .main-body
    .main-contents
      .main-contents__top
        .main-contents__header--name
          レディース新着アイテム
        =link_to "もっと見る ＞", class: "main-contents__header--more"
      .main-contents__goods
        %ul
          - @products.each do |product|
            %li
              .main-contents-box
                =link_to product_path(product.id), class: "contents-item" do
                  .contents-item__image
                    .contents-item__image--price
                      ¥
                      %span= product.price
                    = image_tag product.image_url if product.image.present?
                  .contents-item__index
                    .contents-item__index--name 
                      %span= product.name